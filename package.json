{
  "name": "cool-ls",
  "version": "0.1.7",
  "description": "Simple console utility designed to display a list of files",
  "main": "./dist/index.ts",
  "bin": {
    "l": "./dist/bin/l.js"
  },
  "private": false,
  "keywords": [
    "cli",
    "file list",
    "files",
    "ls",
    "list",
    "tree",
    "fs",
    "directory",
    "size",
    "search",
    "tools",
    "utils",
    "directory size",
    "show directory sizes"
  ],
  "scripts": {
    "test": "nodemon -q --watch 'test/**/*' --watch 'src/**/*' --ext 'ts,json' --exec 'mocha -w -r ts-node/register test/index.test.ts'",
    "dev": "nodemon -w src -e ts --exec 'ts-node src/bin/ls.ts'",
    "app": "nodemon -w src -e ts --exec 'ts-node src/app.ts'",
    "build": "tsc --watch",
    "prebuild": "tsc -p ./tsconfig.json; "
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.5.6",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^5.2.2",
    "@types/colors": "^1.2.1",
    "@types/figlet": "^1.5.6",
    "@types/lodash": "^4.14.197",
    "@types/match-sorter": "^6.0.0"
  },
  "author": {
    "name": "teniryte",
    "email": "teniryte@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/teniryte/cool-ls",
  "repository": {
    "type": "git",
    "url": "git@github.com:teniryte/cool-ls.git"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^11.0.0",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.1"
  },
  "files": [
    "./dist"
  ]
}
